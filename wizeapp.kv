#:kivy 2.1.0
<GameView>:
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "logo.png"
            allow_stretch: True
            keep_ratio: True
            size_hint: None, None
            width: self.parent.width
            height: self.parent.width/self.image_ratio
        BoxLayout:
            orientation: "vertical"
            paddind: 100,30,100,30
        Label:
            id: result_label
            text: "Find the number"
            font_size: 60
        TextInput:
            id: answer_input
            padding: 20,20,20,20
            size_hint: 1, 0.5
            font_size: 14
            input_type: "number"
            multiline : False
        Button:
            text:"Validate"
            size_hint:1,0.5
            bold: True
            background_color: "#0065EF"
            on_press: root.check_number()